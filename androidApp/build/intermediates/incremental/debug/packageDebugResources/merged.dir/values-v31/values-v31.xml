<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Base.Theme.App">
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>
    <style name="Theme.MainScreen" parent="Base.Theme.App">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:windowSplashScreenBackground">?attr/backgroundColor</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/app_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">?attr/backgroundColor</item>
    </style>
</resources>